generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  firstName     String
  lastName      String
  username      String         @unique
  password      String
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id      String  @id @default(uuid())
  token   String  @unique
  User    User?   @relation(fields: [userId], references: [id])
  userId  String?
  revoked Boolean @default(false)
}
